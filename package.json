{
  "name": "@xan105/addons",
  "version": "0.1.0",
  "description": "Integrate native code into Node.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./lib/index.js"
    },
    "./napi": {
      "types": "./types/napi.d.ts",
      "default": "./lib/napi.js"
    },
    "./wasi": {
      "types": "./types/wasi.d.ts",
      "default": "./lib/wasi.js"
    }
  },
  "types": "./types/index.d.ts",
  "files": [
    "/cli",
    "/lib",
    "/types"
  ],
  "engines": {
    "node": ">=20.18.0",
    "npm": "^10.8.2"
  },
  "bin": {
    "addons": "cli/pre-gyp.js",
    "node-gyp-load": "cli/pre-gyp.js"
  },
  "scripts": {
    "lint": "biome lint",
    "declare": "tsc --emitDeclarationOnly"
  },
  "keywords": [
    "native",
    "addons",
    "module",
    "prebuild",
    "bindings",
    "node-gyp",
    "gyp",
    "n-api",
    "wasm",
    "wasi",
    "esm"
  ],
  "author": {
    "name": "Anthony Beaumont",
    "email": "dev.xan105@outlook.be",
    "url": "https://xan105.com/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xan105/node-addon.git"
  },
  "bugs": {
    "url": "https://github.com/xan105/node-addon/issues"
  },
  "homepage": "https://github.com/xan105/node-addond#readme",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/xan105"
    },
    {
      "type": "paypal",
      "url": "https://www.paypal.me/xan105"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/xan105"
    }
  ],
  "peerDependencies": {
    "node-gyp": ">=10.1.0"
  },
  "peerDependenciesMeta": {
    "node-gyp": {
      "optional": true
    }
  },
  "dependencies": {
    "@xan105/error": "^1.7.1",
    "@xan105/fs": "^2.3.0",
    "@xan105/is": "^2.10.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.8.1",
    "typescript": "^5.6.3"
  }
}
