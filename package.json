{
  "name": "node-gyp-load",
  "version": "1.1.0",
  "description": "Simple native module bindings (.node) ESM loader with prebuild support",
  "type": "module",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./lib/index.js"
    }
  },
  "types": "./types/index.d.ts",
  "files": [
    "/lib",
    "/types"
  ],
  "engines": {
    "node": ">=20.12.2",
    "npm": "^10.5.0"
  },
  "bin": {
    "node-gyp-load": "lib/preload.js"
  },
  "scripts": {
    "lint": "eslint \"./lib/**/*.{js,mjs}\" \"./types/**/*.d.ts\"",
    "check": "tsc --noemit --checkJs",
    "declare": "tsc --declaration --emitDeclarationOnly --outDir \"./types\""
  },
  "keywords": [
    "node-gyp",
    "prebuild",
    "native-module",
    "bindings",
    "n-api",
    "addons"
  ],
  "author": {
    "name": "Anthony Beaumont",
    "email": "dev.xan105@outlook.be",
    "url": "https://xan105.com/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xan105/node-gyp-load.git"
  },
  "bugs": {
    "url": "https://github.com/xan105/node-gyp-load/issues"
  },
  "homepage": "https://github.com/xan105/node-gyp-load#readme",
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/xan105"
    },
    {
      "type": "paypal",
      "url": "https://www.paypal.me/xan105"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/xan105"
    }
  ],
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@types/node": "^20.14.2",
    "eslint": "^9.5.0",
    "globals": "^15.5.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0-alpha.30"
  },
  "dependencies": {
    "@xan105/error": "^1.7.1",
    "@xan105/fs": "^2.2.1",
    "@xan105/is": "^2.9.3",
    "node-addon-api": "^8.0.0"
  },
  "peerDependencies": {
    "node-gyp": "^10.1.0"
  },
  "peerDependenciesMeta": {
    "node-gyp": {
      "optional": true
    }
  }
}
